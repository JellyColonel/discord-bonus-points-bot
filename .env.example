# Copy this file to .env and fill in your values

# Discord Bot Token (REQUIRED)
DISCORD_TOKEN=your_bot_token_here

# Guild ID (Optional - for faster command sync)
GUILD_ID=your_guild_id_here

# Admin Role ID (Optional - for /toggleevent command)
ADMIN_ROLE_ID=your_admin_role_id_here

# Double BP Event (Optional - default is False)
DOUBLE_BP_EVENT=False

# ============================================================================
# Web Dashboard Configuration
# ============================================================================

# Discord OAuth2 (Get from: https://discord.com/developers/applications)
# Go to OAuth2 â†’ General and copy Client ID and Client Secret
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:5000/callback

# Flask Secret Key (Generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_random_secret_key_here

# Web Server Settings
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=False

# Session Settings (Optional - default is 30 days)
SESSION_LIFETIME_DAYS=30